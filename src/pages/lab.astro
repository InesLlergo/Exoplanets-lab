    <style>
        /* --- BUTTON STYLES --- */
        .btn-container {
            display: flex;
            gap: 0.75rem; /* 12px */
        }

        .btn {
            width: 100%;
            padding: 0.75rem 1rem;
            font-size: 1rem;
            font-weight: 600;
            border: none;
            border-radius: 0.5rem; /* 8px */
            cursor: pointer;
            transition:
                background-color 0.2s ease-in-out,
                transform 0.1s ease-in-out;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .btn:active {
            transform: scale(0.98);
        }

        /* Primary button style (Play/Pause) */
        .btn-primary {
            background-color: #6366f1; /* Indigo 500 */
            color: white;
        }

        .btn-primary:hover {
            background-color: #4f46e5; /* Indigo 600 */
        }

        /* Secondary button style (Reset) */
        .btn-secondary {
            background-color: rgba(
                75,
                85,
                99,
                0.5
            ); /* Gray 600 with transparency */
            color: #d1d5db; /* Gray 300 */
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .btn-secondary:hover {
            background-color: rgba(
                107,
                114,
                128,
                0.5
            ); /* Gray 500 with transparency */
        }

        /* Styles for the API section */
        .api-section {
            background: rgba(0, 0, 0, 0.3);
            border: 1px solid rgba(99, 102, 241, 0.3);
            border-radius: 0.5rem;
            padding: 1rem;
            margin-top: 1rem;
