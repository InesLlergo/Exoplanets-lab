                );
                systemParams.planet.period_days = Number(
                    sliders.period.value,
                );
                systemParams.planet.semiMajorAxis_AU = Number(
                    sliders.semiMajorAxis.value,
                );
                systemParams.star.radius_R_sun = Number(
                    sliders.starRadius.value,
                );
